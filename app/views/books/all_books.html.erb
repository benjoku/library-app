<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>User Id</th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book %></td>
      <td><%= book.author %></td>
      <td><%= book.user_id %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin? %>
  <%= link_to 'New Book', new_book_path, class: "btn btn-secondary" %>
<% end %>