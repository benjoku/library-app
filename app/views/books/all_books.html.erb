<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
  <tr>
    <th>Title</th>
    <th>Author</th>

    <% if current_user.admin? %>
      <th>User Id</th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <% if book.user_id == 4 %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>

        <% if current_user.admin? %>
          <td><%= book.user_id %></td>
        <% end %>

      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin? %>
  <%= link_to 'New Book', new_book_path, class: "btn btn-secondary" %>
<% end %>